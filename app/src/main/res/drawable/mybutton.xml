<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#072f5f" />
            <gradient android:angle="-90" android:startColor="#3792cb" android:endColor="#58CCED"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#072f5f" />
            <solid android:color="#3792cb"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#072f5f" />
            <gradient android:angle="-90" android:startColor="#58CCED" android:endColor="#3792cb" />
        </shape>
    </item>
</selector>